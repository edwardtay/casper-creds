# CasperCreds Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# CASPER NETWORK CONFIGURATION
# ===========================================

# Testnet RPC endpoint
VITE_CASPER_RPC=https://node.testnet.casper.network/rpc

# Network name (casper-test for testnet, casper for mainnet)
VITE_CASPER_NETWORK=casper-test

# Your deployed contract hash (after running deploy script)
# Format: contract-package-abc123... 
VITE_CONTRACT_HASH=contract-package-fc4506f2d996605cbb8d4e06158b8d4320433e2dde4dc766f65115911ac98973

# ===========================================
# AI/ML SERVICES (Optional - Free Tiers)
# ===========================================

# HuggingFace API for NLP fraud detection
# Get free API key at: https://huggingface.co/settings/tokens
VITE_HUGGINGFACE_API_KEY=

# ===========================================
# IPFS STORAGE (Optional)
# ===========================================

# Pinata for IPFS credential metadata storage
# Get free API keys at: https://app.pinata.cloud/keys
VITE_PINATA_API_KEY=
VITE_PINATA_SECRET_KEY=

# Public IPFS gateway for reading
VITE_IPFS_GATEWAY=https://ipfs.io/ipfs/

# ===========================================
# VERCEL DEPLOYMENT
# ===========================================
# Add these environment variables in Vercel dashboard:
# - VITE_CONTRACT_HASH
# - VITE_CASPER_RPC
# - VITE_CASPER_NETWORK
# - VITE_HUGGINGFACE_API_KEY (optional)
# - VITE_PINATA_API_KEY (optional)
# - VITE_PINATA_SECRET_KEY (optional)

# ===========================================
# CONTRACT DEPLOYMENT (Rust CLI)
# ===========================================

# For deploying smart contract via cargo CLI
# These are used by the Rust deployment script, not the frontend

# Testnet RPC for deployment
ODRA_CASPER_LIVENET_NODE_ADDRESS=https://node.testnet.casper.network/rpc

# SSE events endpoint
ODRA_CASPER_LIVENET_EVENTS_URL=https://events.testnet.casper.network/events/main

# Path to your secret key PEM file
# Generate with: openssl ecparam -name secp256k1 -genkey -noout -out secret_key.pem
ODRA_CASPER_LIVENET_SECRET_KEY_PATH=./secret_key.pem

# Chain name
ODRA_CASPER_LIVENET_CHAIN_NAME=casper-test
